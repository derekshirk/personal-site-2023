<article class="Container ContainerProse u-padTop1 u-md-padTop3">

  <div class="u-spaceItems">
    <header class="u-lg-padTop6">
      <h4 class="Banner-label">{{ page.date | readableDate }}</h4>
      <h1 class="PostTitleHero">{{ title }}</h1>
    </header>
    
    
    <div class="u-textGrow PostBody">
      {{ layoutContent | safe }}
    </div> 
    
    
    {% if link %}  
      <span class="u-flex">
        <a class="theme-button" href="{{link}}">
          {% if link_title %}
            {{ link_title }}
          {% else %}
            View link
          {% endif %}
        </a>
      </span>
    {% endif %}
  </div>

